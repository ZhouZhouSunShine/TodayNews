<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/h"
    >

    <ImageButton
        android:id="@+id/right_QQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/i"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/right_Sina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/j"
        android:layout_below="@+id/right_QQ"
        android:layout_alignLeft="@+id/right_QQ"
        />

    <ImageButton
        android:id="@+id/right_Tencent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/k"
        android:layout_below="@+id/right_Sina"
        android:layout_alignLeft="@+id/right_Sina"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/l"
        android:layout_below="@+id/right_Tencent"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/right_Tencent"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/m"
        android:layout_below="@+id/right_Tencent"
        android:layout_alignRight="@+id/right_Tencent"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
